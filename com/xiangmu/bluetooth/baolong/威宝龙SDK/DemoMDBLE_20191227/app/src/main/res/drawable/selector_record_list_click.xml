<?xml version="1.0" encoding="utf-8" ?>
	<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 沒有焦點時的背景顏色 -->
	<item android:state_window_focused="false"
	android:drawable="@mipmap/records_bar_bg" />
	<!-- 非觸摸模式下獲得焦點並單擊時的背景顏色 -->
	<item android:state_focused="true" android:state_pressed="true"
	android:drawable="@mipmap/records_bar_bg" />
	<!--觸摸模式下單擊時的背景顏色  -->
	<item android:state_focused="false" android:state_pressed="true"
	android:drawable="@mipmap/records_bar_bg_down" />
	<!--選中時的背景顏色  -->
	<item android:state_selected="true"  android:drawable="@mipmap/records_bar_bg_down" />
	<!--獲得焦點時的背景  顏色-->
	<item android:state_focused="true" android:drawable="@mipmap/records_bar_bg_down" />
</selector>
