        <LinearLayout
            android:id="@+id/title_bg"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="150"
            android:background="@mipmap/title_bar_n"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/title_bg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1140" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/ll_go_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@mipmap/heart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="450"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_download_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:paddingLeft="5sp"
                        android:text="Count: "
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:text="0"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="/"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:layout_weight="180"
                        android:text="0"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="350"
                    android:paddingLeft="10sp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress: "
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tv_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="160"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:id="@+id/button_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/button_ecg" />
                </LinearLayout>

            </LinearLayout>
